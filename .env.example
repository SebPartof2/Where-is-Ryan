# Discord Bot Token - Get from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application/Client ID - Get from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here

# VATSIM CID to track - The pilot's VATSIM ID number
VATSIM_CID=1234567

# Webhook Channel Settings (right-click channel -> Copy ID)
SCHEDULE_CHANNEL_ID=your_channel_id_here
RULES_CHANNEL_ID=your_channel_id_here

# Secret API key for webhook authentication (generate a random string)
WEBHOOK_API_KEY=your_secret_api_key_here

# Port for the webhook server (default: 4509)
WEBHOOK_PORT=4509
